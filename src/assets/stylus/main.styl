@import '~normalize.css'
@import '_reset'
@import '_fonts'
@import '_variables'

transition-style()
  transition-duration .3s
  transition-timing-function ease-in-out

body
  display flex
  flex-direction column
  height 100vh
  padding 53px 73px 40px
  background url('../img/bg-desktop.svg') 100% no-repeat primary-violet
  background-size cover
  color text-white
  font-family 'Open Sans' sans-serif

  @media screen and (max-height 783px)
    height fit-content
    overflow scroll

  header
    margin-bottom 83px
    img
      width 214px
      margin-left -3px

.section
  display flex
  column-gap 53px
  flex-grow 1
  &-image
    min-width 55%
    img
      width 100%
      object-fit contain
  &__title
    margin-top 9%
    margin-bottom 20px
    line-height 59px
    font-family font-family-heading
    font-size 39px
    word-spacing 3px
  &__description
    margin-bottom 23px
    line-height 27px
    letter-spacing 1px
  &__button
    width 200px
    height 56px
    border-radius 28px
    background text-white
    color primary-violet
    font-family font-family-heading
    font-size 18px
    box-shadow 0 5px 12px 4px rgba(34, 60, 80, .68)
    cursor pointer
    transition-property: background, color
    transition-style()
    &:hover
      background primary-magenta
      color text-white

.social__list
  display flex
  column-gap 16px
  justify-content flex-end
  margin-right -4px
  &-item
    a
      display block
      width 40px
      height @width
      border 1px solid text-white
      border-radius 100%
      background-position center
      background-repeat no-repeat
      transition-property border-color, background-image
      transition-style()
      &:hover
          border-color magenta
    &._facebook a
      background-image url('../img/social_icons/facebook_white.svg')
      background-size 51%
      &:hover
        background-image url('../img/social_icons/facebook_magenta.svg')
    &._twitter a
      background-image url('../img/social_icons/twitter_white.svg')
      background-size 45%
      &:hover
        background-image url('../img/social_icons/twitter_magenta.svg')
    &._instagram a
      background-image url('../img/social_icons/instagram_white.svg')
      background-size 47%
      &:hover
        background-image url('../img/social_icons/instagram_magenta.svg')


@import 'mobile'
